<?xml version="1.0" encoding="UTF-8"?>
<glade-catalog name="gladedatabox" library="gladedatabox" depends="gtk+">
  <glade-widget-classes>
    <glade-widget-class name="GtkDatabox" parent="GtkDrawingArea" generic-name="gtk_databox" title="Databox">
      <properties>
        <property id="scale-type-x" default="GTK_DATABOX_SCALE_LINEAR"/>
	<property id="scale-type-y" default="GTK_DATABOX_SCALE_LINEAR"/>
      </properties>
    </glade-widget-class>
    <glade-widget-class name="GtkDataboxRuler" parent="GtkWidget" generic-name="gtk_databox_ruler" title="Databox ruler">
      <post-create-function>glade_gtk_databox_ruler_post_create</post-create-function>
      <properties>
	<property id="upper" default="10.0"/>
	<property id="position" default="5.0"/>
	<property id="orientation" default="GTK_ORIENTATION_HORIZONTAL">
	  <set-function>glade_databox_ruler_set_orientation</set-function>
	</property>
      </properties>
    </glade-widget-class>
  </glade-widget-classes>

  <glade-widget-group name="GtkDatabox" title="GtkDatabox Catalog">
    <glade-widget-class-ref name="GtkDatabox"/>
    <glade-widget-class-ref name="GtkDataboxRuler"/>
  </glade-widget-group>

</glade-catalog>
